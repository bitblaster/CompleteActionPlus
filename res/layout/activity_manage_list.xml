<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManageListActivity" >

    <ImageView android:id="@+id/manage_list_logo"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/activity_main_logo"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView android:text="@string/manage_list_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/manage_list_logo"
        android:layout_toRightOf="@id/manage_list_logo" 
        android:layout_alignBottom="@id/manage_list_logo"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/manage_list_line1" 
        android:layout_below="@id/manage_list_logo"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp"/>
    
    <TextView android:id="@+id/manage_list_action_label"
        android:text="@string/manage_list_action"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/manage_list_line1"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/manage_list_action_value"
        android:layout_toEndOf="@id/manage_list_action_label"
        android:layout_toRightOf="@id/manage_list_action_label"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/manage_list_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/manage_list_type_label"
        android:text="@string/manage_list_type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/manage_list_line1"
        android:layout_toEndOf="@id/manage_list_action_value"
        android:layout_toRightOf="@id/manage_list_action_value"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/manage_list_type_value"
        android:layout_toEndOf="@id/manage_list_type_label"
        android:layout_toRightOf="@id/manage_list_type_label"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/manage_list_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/manage_list_scheme_label"
        android:text="@string/manage_list_scheme"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/manage_list_line1"
        android:layout_toEndOf="@id/manage_list_type_value"
        android:layout_toRightOf="@id/manage_list_type_value"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/manage_list_scheme_value"
        android:layout_toEndOf="@id/manage_list_scheme_label"
        android:layout_toRightOf="@id/manage_list_scheme_label"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/manage_list_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/manage_list_warning"
        android:layout_below="@id/manage_list_action_label"
        android:text="@string/manage_list_warning"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
	    android:background="@android:color/background_light"  
	    android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        
	<ListView android:id="@+id/manage_list_items"
	    android:layout_below="@id/manage_list_warning"	 
	    android:paddingTop="10dp"  
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent" />        
    
</RelativeLayout>
